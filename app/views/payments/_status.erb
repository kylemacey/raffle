<% if status == 'succeeded' %>
  <div>
    <h2>Payment Successful!</h2>
    <p><%= link_to "Return to POS", pos_main_path %></p>
  </div>
<% elsif status == 'failed' %>
  <div>
    <h2>Payment Failed</h2>
    <p>Please try again.</p>
    <p><%= link_to "Return to POS", pos_main_path %></p>
  </div>
<% else %>
  <div>
    <p>Processing Payment...</p>
  </div>
<% end %>